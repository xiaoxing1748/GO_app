<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/firstFragment">

    <fragment
        android:id="@+id/firstFragment"
        android:name=".fragment.FirstFragment"
        android:label="@string/menu_search"
        tools:layout="@layout/fragment_first">
        <action
            android:id="@+id/action_firstFragment2_to_secondFragment2"
            app:destination="@id/secondFragment" />
    </fragment>
    <fragment
        android:id="@+id/secondFragment"
        android:name=".fragment.SecondFragment"
        android:label="@string/menu_car_list"
        tools:layout="@layout/fragment_second">
        <action
            android:id="@+id/action_secondFragment2_to_thirdFragment2"
            app:destination="@id/thirdFragment" />
    </fragment>
    <fragment
        android:id="@+id/thirdFragment"
        android:name=".fragment.ThirdFragment"
        android:label="@string/menu_rate"
        tools:layout="@layout/fragment_third" />
</navigation>